<wi type="G" value="243,3,">otra cosa</wi>,
<wi type="G" value="235,6,">más que</wi>
<wi type="G" value="2228,7,"/><wi type="G" value="3739,8,">las que</wi>
<wi type="G" value="314,9,">leen</wi>
<wi type="G" value="2228,10,">o</wi>
