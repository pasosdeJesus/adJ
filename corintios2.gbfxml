<rb xml:lang="es">
con <wi type="G" value="5216,3,">su</wi>
<wi type="G" value="4943,1,">ayuda</wi>
<wi type="G" value="3588,6,"><wi type="G" value="1162,7,">al orar</wi></wi>
<wi type="G" value="5228,4,">por</wi>
<wi type="G" value="2257,5,">nosotros</wi>;
